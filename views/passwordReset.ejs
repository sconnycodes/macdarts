<%- include('partials/header') -%>
<body class="bg-dark d-flex flex-column min-vh-100">
  <header class="container text-center">
    <a href="/"><img src="/imgs/default-monochrome-white.svg" class="img-fluid w-50 mb-1 mt-4" ></a>
  </header>
      <main class="container text-bg-dark">
        
          <div class="row justify-content-center">
              <section class="col-6 mt-5 mb-5">
                  <% if (locals.messages.errors) { %>
                      <% messages.errors.forEach( el => { %>
                          <div class="alert alert-danger"><%= el.msg %></div>
                      <% }) %>    
                  <% } %>
                  <% if (locals.messages.info) { %>
                      <% messages.info.forEach( el => { %>
                          <div class="alert alert-info"><%= el.msg %></div>
                      <% }) %>    
                  <% } %>
                  <form action="/passwordReset" method="POST">
                    <h3>Password Reset Request</h3>
                      <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                        <div id="emailHelp" class="form-text">Please enter the email address of the account you would like to reset the password for.</div>
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
              </section>
          </div>
      </main>
  
  <%- include('partials/footer') -%>
</body>
