<%- include('partials/header') -%>
<body class="text-bg-dark d-flex flex-column min-vh-100">
  <main class="container ">
    <header class="text-center">
      <a href="/"><img src="/imgs/default-monochrome-white.svg" class="img-fluid w-50 mb-2 mt-4" ></a>
    </header>
    <div class="row justify-content-center ">
      <section class="col-6 mt-5">
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el => { %>
              <div class="alert alert-danger"><%= el.msg %></div>
          <% }) %>    
      <% } %>
      <% if (locals.messages.info) { %>
          <% messages.info.forEach( el => { %>
              <div class="alert alert-info"><%= el.msg %></div>
          <% }) %>    
      <% } %>
        <form action="/changePassword?token=<%= params.token%>&id=<%= params.userId %>" method="POST">
          <h3>Reset Password</h3>
          <div class="mb-3">
            <label for="passwordInput" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="passwordInput"
              name="password"
            />
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary ">Submit</button>
          </div>
          
        </form>
        
          
        
        
      </section>
    </div>
  </main>
  
  <%- include('partials/footer') -%>
  
</body>
